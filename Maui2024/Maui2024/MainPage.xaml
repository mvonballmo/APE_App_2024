<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:core="clr-namespace:Core;assembly=Core"
             x:Class="Maui2024.MainPage">

    <ContentPage.BindingContext>
        <core:MainPageViewModel />
    </ContentPage.BindingContext>
    
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                
                <Label Text="{Binding FullName}"
                       Style="{StaticResource Headline}"
                       HorizontalOptions="Start"/>
            
                <Label Text="{Binding Count}"
                       Style="{StaticResource Headline}"
                       HorizontalOptions="End"
                       Grid.Column="1"/>
            </Grid>
            
            <HorizontalStackLayout HorizontalOptions="Fill" BackgroundColor="Beige">
            </HorizontalStackLayout>
            
            <Entry Text="{Binding FirstName, Mode=TwoWay}"
                   Placeholder="Please enter your first name"
            />
            
            <Entry Text="{Binding LastName, Mode=TwoWay}"
                   Placeholder="Please enter your last name"
            />
            
            <Button
                Text="Increment Count" 
                SemanticProperties.Hint="Increments the count"
                Clicked="OnCounterClicked"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
